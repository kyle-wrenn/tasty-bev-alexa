{
  "name": "tasty-dev-alexa-lambda",
  "version": "1.0.0",
  "description": "NodeJS lambda for the Tasty Beverage Alexa Skill",
  "main": "index.js",
  "scripts": {
    "test": "./node_modules/.bin/mocha tests",
    "deploy:lambda": "ask lambda upload -f ask-custom-tasty-beverage-default"
  },
  "author": "Kyle Wrenn <kyle.wrenn@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "actions-on-google": "^2.12.0",
    "ask-sdk-core": "^2.0.0",
    "ask-sdk-model": "^1.0.0",
    "aws-sdk": "^2.463.0",
    "request": "^2.88.0"
  },
  "devDependencies": {
    "body-parser": "^1.18.3",
    "chai": "^4.2.0",
    "dotenv": "^6.2.0",
    "eslint": "^5.14.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "express": "^4.16.4",
    "json-parser": "^3.1.2",
    "mocha": "^5.2.0",
    "serverless-local-alexa-server": "^0.2.0",
    "sinon": "^7.2.3"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "mocha": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 9
